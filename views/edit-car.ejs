<% include partials/header.ejs %>

<h1>Car Details</h1>

<form method="post">
    <div class="form-group">
        <label for="companyName" class="col-sm-2 control-label">Company Name:</label>
        <input name="companyName" id="companyName" required
               value="<%= cars.companyName %>" />
    </div>
    <div class="form-group">
        <label for="model" class="col-sm-2 control-label">Model Name:</label>
        <input name="model" id="model" required
               value="<%= cars.model %>" />
    </div>
    <div class="form-group">
        <label for="engine" class="col-sm-2 control-label">Engine:</label>
        <input name="engine" id="engine" required value="<%= cars.genre %>" />
    </div>
    <div class="form-group">
        <label for="year" class="col-sm-2 control-label">Year:</label>
        <input name="year" id="year" required type="number" min="1970"
               value="<%= cars.year %>"/>
    </div>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>
<% include partials/footer.ejs %>